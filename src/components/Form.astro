---
import Button from "../components/Button.astro";
---

<div class="grid gap-6 max-w-xl w-full mx-auto p-6">
  <!-- Navn -->
  <div class="grid gap-1">
    <label class="font-semibold ml-13 mb-3 text-darkblue">Navn</label>
    <div class="grid grid-cols-[40px_1fr] items-center gap-2">
      <img
        src="/navn.svg"
        alt="person ikon"
        class="w-10 h-10 text-orange justify-self-end"
      />
      <input
        type="text"
        placeholder="Navn"
        class="bg-transparent p-3 border-2 border-orange rounded-xl w-full focus:outline-none text-orange placeholder:text-orange/50"
      />
    </div>
  </div>

  <!-- Email -->
  <div class="grid gap-1">
    <label class="ml-13 mb-3 font-semibold text-darkblue">Email</label>
    <div class="grid grid-cols-[40px_1fr] items-center gap-2">
      <img src="/mail.svg" alt="mail ikon" class="w-9 h-9 justify-self-end" />
      <input
        type="email"
        placeholder="Email"
        class="bg-transparent p-3 border-2 border-orange rounded-xl w-full focus:outline-none text-orange placeholder:text-orange/50"
      />
    </div>
  </div>
</div>

