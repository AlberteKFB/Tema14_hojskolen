    <Image src={card1} alt="card 1" class="w-100 p-6" />
  </figure>
  <div class="card-body">
    <h2 class="brygada-semibold card-title text-4xl text-center">
      Maldiverne, Sri Lanka, Bali & Gili Islands
    </h2>
    <p class="text-2xl lg:mt-20 text-center lg:text-left">2 Måneder</p>

    <section class="lg:flex flex-row-3 lg:gap-50 lg:text-2xl text-center">
      <div>
        <p>Ankomst</p>
        <p>d. 2. Juli</p>
      </div>
      <div>
        <p>Hjemrejse</p>
        <p>d. 6. September</p>
      </div>
      <div>
        <p>53.800</p>
      </div>
    </section>

    <div class="card-actions lg:justify-end justify-center">
      <button class="btn btn-primary">TILMELD DIG</button>
    </div>
  </div>
</div>
